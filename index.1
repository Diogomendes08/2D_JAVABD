                    <td><button class="delete-btn" onclick="deleteRow(this)">Excluir</button></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>.</td>
                    <td>.</td>
                    <td>1</td>
                    <td><button class="delete-btn" onclick="deleteRow(this)">Excluir</button></td>
                </tr>
                <!-- Add more rows here -->
            </tbody>
        </table>

        <h2>Tabela 2</h2>
        <table id="tabela2">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Data</th>
